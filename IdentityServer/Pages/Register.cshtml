@page
@model IdentityServer.Pages.RegisterModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<p>Enter a user data:</p>

<form method="post">
    <div>
        <label asp-for="RegisterForm.Username"></label>
        <input asp-for="RegisterForm.Username" />
        <span asp-validation-for="RegisterForm.Username"></span>
    </div>
    <div>
        <label asp-for="RegisterForm.FirstName"></label>
        <input asp-for="RegisterForm.FirstName" />
        <span asp-validation-for="RegisterForm.FirstName"></span>
    </div>
    <div>
        <label asp-for="RegisterForm.LastName"></label>
        <input asp-for="RegisterForm.LastName" />
        <span asp-validation-for="RegisterForm.LastName"></span>
    </div>
    <div>
        <label asp-for="RegisterForm.Email"></label>
        <input asp-for="RegisterForm.Email" />
        <span asp-validation-for="RegisterForm.Email"></span>
    </div>
    <div>
        <label asp-for="RegisterForm.Password"></label>
        <input asp-for="RegisterForm.Password" />
        <span asp-validation-for="RegisterForm.Password"></span>
    </div>
    <div>
        <label asp-for="RegisterForm.ConfirmPassword"></label>
        <input asp-for="RegisterForm.ConfirmPassword" />
        <span asp-validation-for="RegisterForm.ConfirmPassword"></span>
    </div>
    <div>
        <input type="submit" />
    </div>
    <div>
        <p>@Model.Error</p>
    </div>
</form>
